<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 - 약관 동의"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- 전체동의 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbAll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="전체 동의" />

        <!-- 오른쪽 여백 빈칸 (화살표는 전체동의에는 없음) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp"/>
    </LinearLayout>

    <!-- 약관 항목: 각 항목은 체크박스 + 화살표 -->
    <LinearLayout
        android:id="@+id/rowAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbAge"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[필수] 만 14세 이상입니다." />

        <TextView
            android:id="@+id/arrowAge"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbService"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[필수] 서비스 이용약관" />

        <TextView
            android:id="@+id/arrowService"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbPrivacy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[필수] 개인정보 수집 및 이용 동의" />

        <TextView
            android:id="@+id/arrowPrivacy"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowSensitive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbSensitive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[선택] 민감정보 수집 및 이용 동의" />

        <TextView
            android:id="@+id/arrowSensitive"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowMarketing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbMarketing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="[선택] 마케팅 정보 수신 동의" />

        <TextView
            android:id="@+id/arrowMarketing"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"/>
    </LinearLayout>


    <!-- 계속하기 버튼 -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@android:color/darker_gray"
        android:enabled="false"
        android:text="동의하고 계속하기"
        android:textColor="@android:color/white" />
</LinearLayout>
