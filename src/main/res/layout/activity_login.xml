<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- 로봇 아이콘 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/book"
        android:layout_marginTop="60dp"
        android:contentDescription="앱 로고" />

    <!-- 메인 제목 -->
    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="세상에 단 한 권 뿐인\n당신의 몸이라는 고서(古書)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <!-- 설명 -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 사서가 함께 해독해 드릴게요.\n(체질 진단까지 약 3분 소요)"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#666666" />

    <!-- 카카오로 시작하기 버튼 -->
    <Button
        android:id="@+id/btnKakaoLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FEE500"
        android:text="카카오로 시작하기"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- 구글로 시작하기 버튼 -->
    <Button
        android:id="@+id/btnGoogleLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FFFFFF"
        android:text="구글로 시작하기"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- 네이버로 시작하기 버튼 -->
    <Button
        android:id="@+id/btnNaverLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#81c147"
        android:text="네이버로 시작하기"
        android:textColor="#000000"
        android:textStyle="bold" />

    <!-- 아이디로 시작하기 버튼 -->
    <Button
        android:id="@+id/btnIdLogin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#D3D3D3"
        android:text="아이디로 시작하기"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>
